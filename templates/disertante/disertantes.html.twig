<html><body><!-- borrar -->

    <h1>Disertantes</h1>

    {% for disertante in disertantes %}
    <div class="grid_9 alpha">
        <h2><a href="{{ path('app_disertante', {'id': disertante.id} ) }}">{{disertante.nombreCompleto}}</a></h2>
        <p>{{disertante.biografia}}</p>

        <p><strong>Impate los siguientes eventos</strong></p>
        <ul>
        {% for evento in disertante.eventos %}
            <li>
                <a href="{{ path('app_evento', {'slug': evento.slug} ) }}">{{evento.titulo}}</a>
            </li>
        {% else %}
            <li>
                <p>No imparte ningún evento</p>
            </li>
        {% endfor %}
        </ul>
        </div class="grid_3 omega">
            <p><strong>Más información</strong></p>
            <ul>
                {% if disertante.twitter %}
                    <li><a href="{{ disertante.twitter }}">Twitter</a></li>
                {% endif %}
            </ul>
        <div>
    {% endfor %}

</body></html> <!-- borrar -->
